<% @orders.each do |order| %>
  <tr scope="row">
      <td><%= order.user.profile.first_name %> <%= order.user.profile.last_name %></td>
      <td><%= order.user.orders.count if order.user.orders %></td>
      <td><%= order.product.name %></td>
      <td><%= order.price %></td>
      <td class="remove-mob"><%= order.quantity %></td>
      <td><%= order.created_at.getlocal.strftime("%e-%m-%y %H:%M") %></td>
      <td><%= link_to "View Order", order_path(order), class: "btn btn-success btn-sm" %></td>
  </tr>
<% end %>