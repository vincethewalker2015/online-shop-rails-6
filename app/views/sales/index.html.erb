<div class="row mt-3 google-font">
  <% if current_user.orders.count > 0 %>
    <h3 class="mx-auto">Sales</h3>
    <h3 class="mx-auto">Total sales to date <span class="badge badge-success"><%= @orders.sum(:price).to_f %></span></h3>
    <div class="col-12 card">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">User</th>
            <th scope="col">Orders Placed</th>
            <th scope="col">Product</th>
            <th scope="col">Value</th>
            <th class="remove-mob" scope="col">Quantity</th>
            <th scope="col">Order Time</th>
          </tr>
        </thead>

        <tbody>
          <% unless @orders.count < 1 %>
            <%= render "sales/admin_listing" %>
          <% else %>
            <div class="card-body">
              <h4 class="text-center">There are no orders to display</h4>
            </div>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>

