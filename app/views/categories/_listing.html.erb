<% obj.each do |product| %>
      <div class="card-index">
        <div class="row justify-content-center">
        
        <div class="col-8 ">
        
        <div class="card-block text-center">
        
        
      <div class="card-body">
        <h4 class="card-title text-bold card-title-index"><%= product.name %></h4>
          <p> 
            <%= link_to "View / Order", product_path(product), class: "btn btn-outline-primary" %> 
          <% if current_user.admin? %>
            <%= link_to "Edit", edit_product_path(product), class: "btn btn-outline-warning" %> 
            <%= link_to "Delete", product_path(product), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
          <% end %>
          <% if product.categories.any? %>
          <p class="text-center object-color"><span class="object-color">Categories: </span><%= render product.categories %></p>
        <% end %>
        </p>
        
      </div>
      </div>
    </div>  
      </div>
      </div>
    <% end %>