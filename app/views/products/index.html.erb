<h1 class="jumbotron text-center">Welcome to Shopping App</h1>
  <div class="row">
     <%#= render 'shared/product', collection: @products %>
     <% @products.each do |product| %>
         <div class="card">
            <div class="card-body">
               <div class="card-title">
                  <p> <%= product.name %> </p>
               </div>
               
               <div class="card-text">
                  <p><small>GBP</small> <%= product.price %></p>
               </div>

               <div class="card-footer">
                  <%= link_to 'View Product', product_path(product) %>
               </div>
            </div>
         </div>
     <% end %>
     
  </div>

